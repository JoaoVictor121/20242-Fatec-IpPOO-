import java.util.Scanner;
 public class SomarDoisNumeros{
   public static void main(String [] args){
     //declaração de variáveis
    Scanner leitor = new Scanner(System.in);
    //int a;
    //int b;
    //int soma;
    int a, b, resultadoDaSoma;
    //entrada de dados 
    System.out.printIn("Digite um valor");
    a = leitor.nextInt();
    System.out.printIn("Digite outro valor");
    b = leitor.nextInt(); 
    //processamento
    resultadoDaSoma = a + b;
    //saída
    // 3 + 4 = 7
    //System.out.printIn(a + " + " + b + " = " + resultadoDaSoma);
    System.out.printf("%d + %d = %d\n" , a, b, resultadoDaSoma); 
  }
}
